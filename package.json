{
  "name": "ulern",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://OrelNaranjo@github.com/OrelNaranjo/ulern-fullstack-test.git",
  "author": "Orel Naranjo <orelnaranjo@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "postinstall": "yarn install:backend && yarn install:frontend",
    "install:backend": "cd backend && yarn install",
    "install:frontend": "cd frontend && yarn install",
    "composer:backend": "cd backend && yarn composer",
    "migrate:backend": "cd backend && yarn migrate",
    "dev:backend": "cd backend && php artisan serve",
    "dev:frontend": "cd frontend && yarn dev",
    "dev": "concurrently \"yarn dev:backend\" \"yarn dev:frontend\"",
    "setup": "yarn install && yarn composer:backend && yarn migrate:backend && yarn swagger:generate:backend",
    "format:frontend": "cd frontend && yarn format",
    "format:backend": "cd backend && yarn format",
    "format": "concurrently \"yarn format:backend\" \"yarn format:frontend\"",
    "swagger:generate:backend": "cd backend && yarn swagger:generate"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
